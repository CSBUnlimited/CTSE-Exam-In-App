<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMajor</item>
        <item name="colorPrimaryDark">@color/colorMajorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Primary Button -->
    <style name="PrimaryButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:textSize">@dimen/formButton_textSize</item>
        <item name="android:padding">@dimen/formButton_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Success Button -->
    <style name="SuccessButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:textSize">@dimen/formButton_textSize</item>
        <item name="android:padding">@dimen/formButton_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorSuccess</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Warning Button -->
    <style name="WarningButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:textSize">@dimen/formButton_textSize</item>
        <item name="android:padding">@dimen/formButton_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorWarning</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Danger Button -->
    <style name="DangerButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:textSize">@dimen/formButton_textSize</item>
        <item name="android:padding">@dimen/formButton_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorDanger</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
